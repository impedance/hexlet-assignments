<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <h3><%= link_to task.name, task_path(task) %></h3>
      <p><%= link_to "edit", edit_task_path(task) %></p>
      <p><%= link_to "destroy", task_path(task), data: { turbo_method: :delete, confirm: 'sure?'} %></p>
    </li>
  <% end %>
</ul>
