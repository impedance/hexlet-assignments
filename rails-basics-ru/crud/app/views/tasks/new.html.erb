<h1>New task</h1>

<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :name %></br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :creator %></br>
    <%= form.text_field :creator %>
  </div>

  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
